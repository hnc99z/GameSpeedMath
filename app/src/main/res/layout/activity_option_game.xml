<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    tools:context=".OptionGame">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nhập thời gian mỗi câu"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="( Mặc định 3s )"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edInputTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập thời gian"
        android:paddingLeft="10dp"
        android:text="3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Chọn kiểu số muốn chơi"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:textStyle="normal" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Ex: Số 2 = 24 + 36 = ?"
        android:textColor="@android:color/black"
        android:textSize="14dp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="8">

        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_btn1"
            android:text="1"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_btn1"
            android:text="2"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_btn1"
            android:text="3"
            android:textColor="@android:color/white" />
    </LinearLayout>


    <Button
        android:id="@+id/btnPhepCong"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:text="Phép cộng"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnPhepTru"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:text="Phép trừ"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnPhepNhan"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:text="Phép nhân"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnTongHop"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_button"
        android:text="Tổng hợp"
        android:textColor="@android:color/white"
        android:textSize="18dp" />
</LinearLayout>